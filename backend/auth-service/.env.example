# Puerto en el que corre el Auth Service
PORT=4001

# URL de conexión a la base de datos PostgreSQL
DATABASE_URL=postgresql://user:password@db:5432/medicare_auth

# Secreto para firmar los JWT (debe ser igual en todos los servicios que validen tokens)
JWT_SECRET=un_secreto_super_seguro

# Configuración para MFA por email (opcional, para futuras versiones)
MFA_EMAIL_FROM=tu_email@gmail.com
MFA_EMAIL_PASS=tu_contraseña_de_email